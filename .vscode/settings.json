{
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "cssvar.files": ["shared/static/lib/open-props.min.css"],
  "explorer.fileNesting.patterns": {
    "go.mod": "go.sum",
    "pocketbase": "pocketbase*",
    ".env": ".gitignore, .golangci.yml, .prettierignore, .prettierrc.js, model.conf, tailwind.config.js, tailwind-sorter.toml, firebase.json, .firebaserc, .editorconfig"
  },
  "files.exclude": {
    "tmp": true,
    "main.*": true,
    ".idea": true,
    "node_modules": true,
    "package.json": true
  },

  /* Shoelace [ON] */
  "html.customData": [
    "./node_modules/@shoelace-style/shoelace/dist/vscode.html-custom-data.json"
  ],
  "css.styleSheets": ["**/style.css"],
  "tailwindCSS.includeLanguages": {
    "templ": "html"
  }

