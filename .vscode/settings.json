{
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  // "go.formatTool": "goimports",
  "css.styleSheets": [
    // "shared/static/lib/bulma.min.css",
    "shared/static/lib/beer.min.css",
    "**/style.css"
  ],
  "cssvar.files": ["shared/static/lib/open-props.min.css"],
  "explorer.fileNesting.patterns": {
    "go.mod": "go.sum",
    "pocketbase": "pocketbase*",
    ".env": ".gitignore, .golangci.yml, .prettierignore, .prettierrc.js, model.conf, tailwind.config.js, firebase.json, .firebaserc, .editorconfig"
  },
  "files.exclude": {
    "tmp": true,
    "main.*": true,
    ".idea": true,
    "node_modules": true,
    "package.json": true
  },
  "tailwindCSS.includeLanguages": {
    "go": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["Class(?:es)?[({]([^)}]*)[)}]", "[\"`]([^\"`]*)[\"`]"]
  ]
}
