{
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  // "go.formatTool": "goimports",
  /* InlayHints On */
  // "go.inlayHints.compositeLiteralFields": true,
  // "go.inlayHints.compositeLiteralTypes": true,
  // "go.inlayHints.functionTypeParameters": true,
  // "go.inlayHints.parameterNames": true,
  // "go.inlayHints.rangeVariableTypes": true,
  // "go.inlayHints.constantValues": true,
  /* InlayHints On */
  "css.styleSheets": [
    // "shared/static/lib/bulma.min.css",
    "shared/static/lib/beer.min.css",
    "**/style.css"
  ],
  "cssvar.files": ["shared/static/lib/open-props.min.css"],
  "cssvar.extensions": ["css", "html"],
  "explorer.fileNesting.patterns": {
    "go.mod": "go.sum",
    "pocketbase": "pocketbase*",
    ".env": ".gitignore, .golangci.yml, .prettierignore, model.conf, tailwind.config.js"
  },
  "files.exclude": {
    "tmp": true,
    "main.*": true,
    ".idea": true,
    "node_modules": true,
    "package.json": true
  },
  "tailwindCSS.includeLanguages": {
    "go": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["Class(?:es)?[({]([^)}]*)[)}]", "[\"`]([^\"`]*)[\"`]"]
  ]
}
