{
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast"],
  "html.customData": [
    /* Shoelace [ON] */
    "./node_modules/@shoelace-style/shoelace/dist/vscode.html-custom-data.json"
  ],
  "css.styleSheets": [
    /* Bulma [ON] */
    // "shared/static/lib/bulma.min.css",
    /* Beer [ON] */
    // "shared/static/lib/beer.min.css",
    "**/style.css"
  ],
  "cssvar.files": ["shared/static/lib/open-props.min.css"],
  "explorer.fileNesting.patterns": {
    "go.mod": "go.sum",
    "pocketbase": "pocketbase*",
    ".env": ".gitignore, .golangci.yml, .prettierignore, .prettierrc.js, model.conf, tailwind-sorter.toml, firebase.json, .firebaserc, .editorconfig"
  },
  "files.exclude": {
    "tmp": true,
    "main.*": true,
    ".idea": true,
    "node_modules": true,
    "package.json": true
  },
  "tailwindCSS.includeLanguages": {
    /* [Gomponents] Tailwind [ON] */
    // "go": "html",
    /* [Templ] Tailwind [ON] */
    "templ": "html"
  },
  "tailwindCSS.experimental.classRegex": [
    ["Class(?:es)?[({]([^)}]*)[)}]", "[\"`]([^\"`]*)[\"`]"]
  ]
}
